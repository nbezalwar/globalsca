<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           				http://www.springframework.org/schema/util
           				http://www.springframework.org/schema/util/spring-util.xsd"
	default-autowire="byName">

	<bean id="translateWizard" class="de.hybris.platform.cockpit.wizards.Wizard"
		scope="prototype">
		<property name="title" value="globalcockpit.wizard.translate.title" />
		<property name="pageRoot" value="/globalcockpit/wizard/translate/" />
		<property name="height" value="285px" />
		<property name="width" value="550px" />
		<property name="pages">
			<list>
				<bean class="de.hybris.platform.cockpit.wizards.impl.DefaultPage">
					<property name="id">
						<util:constant
							static-field="org.gs4tr.projectdirector.adaptors.hybris.cockpit.wizard.translate.controller.TranslateWizardController.PAGE_PROJECT" />
					</property>
					<property name="componentURI" value="projectSelection.zul" />
				</bean>
				<bean class="de.hybris.platform.cockpit.wizards.impl.DefaultPage">
					<property name="id">
						<util:constant
							static-field="org.gs4tr.projectdirector.adaptors.hybris.cockpit.wizard.translate.controller.TranslateWizardController.PAGE_CONFIG" />
					</property>
					<property name="componentURI" value="config.zul" />
				</bean>
				<bean class="de.hybris.platform.cockpit.wizards.impl.DefaultPage">
					<property name="id">
						<util:constant
							static-field="org.gs4tr.projectdirector.adaptors.hybris.cockpit.wizard.translate.controller.TranslateWizardController.PAGE_SUMMARY" />
					</property>
					<property name="componentURI" value="summary.zul" />
				</bean>
			</list>
		</property>
		<property name="defaultController">
			<bean
				class="org.gs4tr.projectdirector.adaptors.hybris.cockpit.wizard.translate.controller.TranslateWizardController" />
		</property>
	</bean>
	
