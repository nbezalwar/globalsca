<!-- 
  WARNING: This is the Spring WEB configuration file. If you want to replace
  items or managers you have to do this from the extensions core configuration 
  file (globallink/resources/globallink-spring.xml) 
  -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-autowire="byName">

	<!--
		Actions of the globalcockpit
	-->
	<alias alias="TranslateAction" name="defaultTranslateAction" />
	
	<bean id="defaultTranslateAction"
		class="org.gs4tr.projectdirector.adaptors.hybris.cockpit.components.listview.impl.TranslateAction"
		scope="prototype" />

	<alias alias="SubmitToPDCronJobAction" name="defaultSumbmitToPDCronJobAction" />
	
	<bean id="defaultSumbmitToPDCronJobAction"
		class="org.gs4tr.projectdirector.adaptors.hybris.cockpit.components.listview.impl.CronJobAction"
		scope="prototype">
		<property name="cronJobName" value="submitToPDCronJob" />
		<property name="tooltip" value="globalcockpit.submitaction.tooltip" />
		<property name="imageURIActive" value="globalcockpit/images/globallink_submitJob.png" />
		<property name="imageURIInactive" value="globalcockpit/images/globallink_submitJob_inactive.png" />
	</bean>

	<alias alias="FetchFromPDCronJobAction" name="defaultFetchFromPDCronJobAction" />
	
	<bean id="defaultFetchFromPDCronJobAction"
		class="org.gs4tr.projectdirector.adaptors.hybris.cockpit.components.listview.impl.CronJobAction"
		scope="prototype">
		<property name="cronJobName" value="fetchFromPDCronJob" />
		<property name="tooltip" value="globalcockpit.fetchaction.tooltip" />
		<property name="imageURIActive" value="globalcockpit/images/globallink_fetchJob.png" />
		<property name="imageURIInactive" value="globalcockpit/images/globallink_fetchJob_inactive.png" />
	</bean>
</beans>
