  items or managers you have to do this from the extensions core configuration 
  file (globallink/resources/globallink-spring.xml) 
  -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-autowire="byName">
	
	<bean id="GlobalCockpitPerspective" parent="BasePerspective" scope="session">
		<property name="uid" value="globallink.perspective.globalcockpit" />
		<property name="label" value="globalcockpit.perspective.globalcockpit" />
		<property name="customCsaURI" value="/globalcockpit/globalcockpitCSA.zul" />
		<property name="navigationArea" ref="GlobalCockpitNavigationArea" />
		<property name="browserArea" ref="GlobalCockpitBrowserArea" />
		<property name="editorArea" ref="GlobalCockpitEditorArea" />
	</bean>
	
	<alias alias="GlobalCockpitNavigationArea" name="defaultGlobalCockpitNavigationArea" />
	
	<bean id="defaultGlobalCockpitNavigationArea" class="de.hybris.platform.cockpit.session.impl.BaseUICockpitNavigationArea"
		parent="BaseNavigationArea" scope="session">
		<property name="sectionModel" ref="GlobalCockpitSectionModel" />
		<property name="sections">
			<list>
				<ref bean="GlobalCockpitUndoSection" />
			</list>
		</property>
		<property name="cockpitTypeService" ref="cockpitTypeService" />
	</bean>
	
	<alias alias="GlobalCockpitSectionModel" name="defaultGlobalCockpitSectionModel" />
	
	<bean id="defaultGlobalCockpitSectionModel" class="de.hybris.platform.cockpit.components.navigationarea.DefaultNavigationAreaModel"
		scope="session">
		<property name="specialCollectionTypes">
			<list>
				<value>blacklist</value>
				<value>quickcollection</value>
			</list>
		</property>
	</bean>
	
	<alias alias="GlobalCockpitUndoSection" name="defaultGlobalCockpitUndoSection" />
	
	<bean id="defaultGlobalCockpitUndoSection" class="de.hybris.platform.cockpit.components.navigationarea.NavigationPanelSection" scope="prototype">
		<property name="localizedLabel" value="navigationarea.history" />
		<property name="visible" value="true" />
		<property name="renderer">
			<bean class="de.hybris.platform.cockpit.components.navigationarea.renderer.UndoSectionRenderer" />
		</property>
	</bean>
	
	<alias alias="GlobalCockpitBrowserArea" name="defaultGlobalCockpitBrowserArea" />
	
	<bean id="defaultGlobalCockpitBrowserArea" class="org.gs4tr.projectdirector.adaptors.hybris.cockpit.session.impl.GlobalCockpitSearchBrowserArea"
		parent="BaseSearchBrowserArea" scope="session" >
		<property name="viewURI" value="globalcockpit/searchBrowserArea.zul" />
		<property name="infoAreaContainerId" value="globalcockpitInfoAreaContainer" />
		<property name="openInspectorOnSelect" value="true" />
		<property name="inspectorRenderer" ref="GlobalCockpitBrowserAreaInspector" />
		<property name="multiSelectActions">
			<ref bean="GlobalCockpitBrowserAreaMultiSelectActions" />
		</property>
	</bean>
	
	<alias alias="GlobalCockpitBrowserAreaInspector" name="defaultGlobalCockpitBrowserAreaInspector" />
	
	<bean id="defaultGlobalCockpitBrowserAreaInspector" class="org.gs4tr.projectdirector.adaptors.hybris.cockpit.components.inspector.impl.GlobalCockpitInspector"
		scope="session">
		<property name="viewURI" value="globalcockpit/inspector.zul" />
	</bean>
	
	<alias alias="GlobalCockpitEditorArea" name="defaultGlobalCockpitEditorArea" />
	
	<bean id="defaultGlobalCockpitEditorArea" parent="BaseEditorAreaModel" scope="session">
		<property name="editorAreaController" ref="GlobalCockpitEditorAreaController" />
	</bean>
	
	<alias alias="GlobalCockpitEditorAreaController" name="defaultGlobalCockpitEditorAreaController" />
	
	<bean id="defaultGlobalCockpitEditorAreaController" class="de.hybris.platform.cockpit.session.impl.DefaultEditorAreaController" scope="session">
		<property name="sectionRowRenderer" ref="EditorSectionRowRenderer" />
		<property name="editorFactory" ref="EditorFactory" />
	</bean>

	<alias alias="GlobalCockpitBrowserAreaMultiSelectActions" name="defaultGlobalCockpitBrowserAreaMultiSelectActions" />
	
	<bean id="defaultGlobalCockpitBrowserAreaMultiSelectActions" class="de.hybris.platform.cockpit.components.listview.impl.DefaultActionColumnConfiguration"
		scope="prototype">
		<constructor-arg value="Actions" />
		<property name="actions">
			<list>
				<ref bean="SubmitToPDCronJobAction" />
				<ref bean="FetchFromPDCronJobAction" />
			</list>
		</property>
	</bean>
	
	<bean id="statusColumn" class="org.gs4tr.projectdirector.adaptors.hybris.cockpit.services.config.impl.StatusColumn" />
	
	<bean id="progressColumn" class="org.gs4tr.projectdirector.adaptors.hybris.cockpit.services.config.impl.ProgressColumn" />
</beans>
