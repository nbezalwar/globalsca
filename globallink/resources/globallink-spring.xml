<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util.xsd"
           default-autowire="byName">

	<!--
	The hybris platform provides one single Spring application context for beans located at the jalo layer.
	Each extension can add beans to this context by specifying them at this configuration file.
	 
	You can use and/or redefine beans defined at configuration files of other extensions as well as
	adding new one.
		
	If you want to locate this file at a different location or want to use several files for better,
	structuring, please use the '<yourextension>.application-context' property at your project.properties file.
	There you can specify a comma separated list of files where first is tried to find a file per classpath and
	then per file system.

	
	If you want to configure beans for your web module please have a look at
	your web/webroot/WEB-INF/<extname>-web-spring.xml.
	-->
	
	<context:annotation-config />
	
	<!--
		DAOs
	-->
	<alias alias="globalLinkConfigDAO" name="defaultGlobalLinkConfigDAO" />
	<bean id="defaultGlobalLinkConfigDAO" class="org.gs4tr.projectdirector.adaptors.hybris.dao.impl.DefaultGlobalLinkConfigDAO" />
	
	<alias alias="globalLinkJobDAO" name="defaultGlobalLinkJobDAO" />
	<bean id="defaultGlobalLinkJobDAO" class="org.gs4tr.projectdirector.adaptors.hybris.dao.impl.DefaultGlobalLinkJobDAO" />
	
	<alias alias="globalLinkJobItemDAO" name="defaultGlobalLinkJobItemDAO" />
	<bean id="defaultGlobalLinkJobItemDAO" class="org.gs4tr.projectdirector.adaptors.hybris.dao.impl.DefaultGlobalLinkJobItemDAO" />
	
	<alias alias="globalLinkTranslatedContentDAO" name="defaultGlobalLinkTranslatedContentDAO" />
	<bean id="defaultGlobalLinkTranslatedContentDAO" class="org.gs4tr.projectdirector.adaptors.hybris.dao.impl.DefaultGlobalLinkTranslatedContentDAO" />
	
	<!--
		Services
	-->
	<alias alias="globalLinkConfigService" name="defaultGlobalLinkConfigService" />
	<bean id="defaultGlobalLinkConfigService" class="org.gs4tr.projectdirector.adaptors.hybris.service.impl.DefaultGlobalLinkConfigService" />
	
	<alias alias="projectDirectorService" name="defaultProjectDirectorService" />
	<bean id="defaultProjectDirectorService" class="org.gs4tr.projectdirector.adaptors.hybris.service.pd.impl.DefaultProjectDirectorService">
		<property name="documentNameGenerator" ref="documentNameGenerator" />
	</bean>
	
	<alias alias="translatableContentService" name="defaultTranslatableContentService" />
	<bean id="defaultTranslatableContentService" class="org.gs4tr.projectdirector.adaptors.hybris.service.impl.DefaultTranslatableContentService">
		<property name="itemHandlers" ref="itemHandlers" />
	</bean>
	
	<alias alias="globalLinkJobService" name="defaultGlobalLinkJobService" />
	<bean id="defaultGlobalLinkJobService" class="org.gs4tr.projectdirector.adaptors.hybris.service.impl.DefaultGlobalLinkJobService" />
	
	<alias alias="globalLinkJobItemService" name="defaultGlobalLinkJobItemService" />
	<bean id="defaultGlobalLinkJobItemService" class="org.gs4tr.projectdirector.adaptors.hybris.service.impl.DefaultGlobalLinkJobItemService">
		<property name="nameProviders">
			<list>
				<bean class="org.gs4tr.projectdirector.adaptors.hybris.service.impl.ConfigurableJobItemNameProvider" /><!-- leave as last -->
			</list>
		</property>
	</bean>
	
	<alias alias="changeDetectionService" name="defaultChangeDetectionService" />
	<bean id="defaultChangeDetectionService" class="org.gs4tr.projectdirector.adaptors.hybris.service.impl.DefaultChangeDetectionService" />
	
	<alias alias="gobalLinkMailService" name="defaultGlobalLinkVelocityMailService" />
	<alias alias="gobalLinkVelocityMailService" name="defaultGlobalLinkVelocityMailService" />
	<bean id="defaultGlobalLinkVelocityMailService" class="org.gs4tr.projectdirector.adaptors.hybris.service.mail.impl.DefaultGlobalLinkVelocityMailService" />
	
	<alias alias="xmlService" name="defaultXMLService" />
	<bean id="defaultXMLService" class="org.gs4tr.projectdirector.adaptors.hybris.service.xml.DefaultXMLService">
		<property name="decorators" ref="xmlDecorators" />
	</bean>
	
	<alias alias="globalLinkTypeService" name="defaultGlobalLinkTypeService" />
	<bean id="defaultGlobalLinkTypeService" class="org.gs4tr.projectdirector.adaptors.hybris.service.impl.DefaultGlobalLinkTypeService" />
	
	<alias alias="localizabilityDecisionManager" name="defaultLocalizabilityDecisionManager" />
	<bean id="defaultLocalizabilityDecisionManager" class="org.gs4tr.projectdirector.adaptors.hybris.service.voting.DefaultLocalizabilityDecisionManager">
		<property name="voters" ref="localizabilityVoters" />
		<property name="unanimousFiltering" value="true" />
	</bean>
	
	<alias alias="contentMonitorConfigurationFactory" name="defaultContentMonitorConfigurationFactory" />
	<bean id="defaultContentMonitorConfigurationFactory" class="org.gs4tr.projectdirector.adaptors.hybris.service.monitor.ConfigurationFactory" />
	
	<!--
		Interceptors
	-->
	<bean id="globalLinkConfigValidator" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkConfigValidator" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkConfigValidator" />
		<property name="typeCode" value="GlobalLinkConfig" />
	</bean>
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkConfigValidator" />
		<property name="typeCode" value="GlobalLinkLanguageMapping" />
		<property name="order">
			<!-- Make sure our error messages are displayed rather than messages from a different validator -->
			<util:constant static-field="org.springframework.core.Ordered.HIGHEST_PRECEDENCE" />
		</property>
	</bean>
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkConfigValidator" />
		<property name="typeCode" value="GlobalLinkProductPreviewURLMapping" />
		<property name="order">
			<!-- Make sure our error messages are displayed rather than messages from a different validator -->
			<util:constant static-field="org.springframework.core.Ordered.HIGHEST_PRECEDENCE" />
		</property>
	</bean>
	
	<bean id="globalLinkJobInitializer" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkJobInitializer" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkJobInitializer" />
		<property name="typeCode" value="GlobalLinkJob" />
	</bean>
	
	<bean id="globalLinkJobValidator" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkJobValidator" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkJobValidator" />
		<property name="typeCode" value="GlobalLinkJob" />
	</bean>
	
	<bean id="globalLinkPrepareJobRemoveInterceptor" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkPrepareJobRemoveInterceptor" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkPrepareJobRemoveInterceptor" />
		<property name="typeCode" value="GlobalLinkJob" />
	</bean>
	
	<bean id="globalLinkJobItemInitializer" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkJobItemInitializer" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkJobItemInitializer" />
		<property name="typeCode" value="GlobalLinkJobItem" />
	</bean>

	<bean id="globalLinkJobItemValidator" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkJobItemValidator" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkJobItemValidator" />
		<property name="typeCode" value="GlobalLinkJobItem" />
	</bean>
	
	<bean id="globalLinkJobItemRemoveInterceptor" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkJobItemRemoveInterceptor" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkJobItemRemoveInterceptor" />
		<property name="typeCode" value="GlobalLinkJobItem" />
	</bean>
	
	<bean id="globalLinkJobItemTargetValidator" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkJobItemTargetValidator" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkJobItemTargetValidator" />
		<property name="typeCode" value="GlobalLinkJobItemTarget" />
	</bean>
	
	<bean id="globalLinkTranslatedContentValidator" class="org.gs4tr.projectdirector.adaptors.hybris.interceptor.GlobalLinkTranslatedContentValidator" />
	
	<bean class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="globalLinkTranslatedContentValidator" />
		<property name="typeCode" value="GlobalLinkTranslatedContent" />
	</bean>
	
	<!--
		Jobs
	-->
	<bean id="submitToPDJob" class="org.gs4tr.projectdirector.adaptors.hybris.jobs.SubmitToPDJob" />
	
	<bean id="fetchFromPDJob" class="org.gs4tr.projectdirector.adaptors.hybris.jobs.FetchFromPDJob" />
	
	<bean id="contentMonitorJob" class="org.gs4tr.projectdirector.adaptors.hybris.jobs.ContentMonitorJob" />
	
	<bean id="cleanupJobsJob" class="org.gs4tr.projectdirector.adaptors.hybris.jobs.CleanupJobsJob" />
	
	<!--
		Mail
	-->
	<bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
		<property name="resourceLoaderPath" value="classpath:/mailtemplates/" />
	</bean>
	
	<bean id="javaMailSender" class="org.gs4tr.projectdirector.adaptors.hybris.service.mail.impl.DefaultMailSenderFactory" />
	
	<!--
		Item Handlers
	-->
	
	<alias alias="itemHandlers" name="defaultItemHandlers" />
	<util:list id="defaultItemHandlers" value-type="org.gs4tr.projectdirector.adaptors.hybris.service.ItemHandler">
		<!-- Order is important if Items fit are instanceof multiple types for which handlers exist -->
		<ref bean="keywordHandler" />
		<ref bean="productFeatureHandler" />
		<ref bean="classAttributeAssignmentHandler" />
		<ref bean="classificationClassHandler" />
		<!-- ref bean="pageItemHandler" />
		<ref bean="cmsNavigationNodeHandler" />
		<ref bean="contentSlotHandler" />
		<ref bean="pageTemplateHandler" />
		<ref bean="footerComponentHandler" />
		<ref bean="navigationBarComponentHandler" /-->
		<ref bean="categoryHandler" />
		<ref bean="productHandler" />
		<ref bean="itemModelHandler" /><!-- leave as last -->
	</util:list>
	
	<alias alias="keywordHandler" name="defaultKeywordHandler" />
	<bean id="defaultKeywordHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.KeywordHandler"
		parent="defaultItemHandler" />
	
	<alias alias="productFeatureHandler" name="defaultProductFeatureHandler" />
	<bean id="defaultProductFeatureHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.ProductFeatureHandler"
		parent="defaultItemHandler" />
	
	<alias alias="classAttributeAssignmentHandler" name="defaultClassAttributeAssignmentHandler" />
	<bean id="defaultClassAttributeAssignmentHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.ClassAttributeAssignmentHandler"
		parent="defaultItemHandler" />
	
	<alias alias="classificationClassHandler" name="defaultClassificationClassHandler" />
	<bean id="defaultClassificationClassHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.ClassificationClassHandler"
		parent="defaultItemHandler" />
	
	<!-- alias alias="pageItemHandler" name="defaultPageItemHandler" />
	<bean id="defaultPageItemHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.PageItemHandler"
		parent="defaultItemHandler" />
	
	<alias alias="cmsNavigationNodeHandler" name="defaultCmsNavigationNodeHandler" />
	<bean id="defaultCmsNavigationNodeHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.CMSNavigationNodeHandler"
		parent="defaultItemHandler" />
	
	<alias alias="contentSlotHandler" name="defaultContentSlotHandler" />
	<bean id="defaultContentSlotHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.ContentSlotHandler"
		parent="defaultItemHandler" />
	
	<alias alias="pageTemplateHandler" name="defaultPageTemplateHandler" />
	<bean id="defaultPageTemplateHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.PageTemplateHandler"
		parent="defaultItemHandler" />
	
	<alias alias="footerComponentHandler" name="defaultFooterComponentHandler" />
	<bean id="defaultFooterComponentHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.FooterComponentHandler"
		parent="defaultItemHandler" />
	
	<alias alias="navigationBarComponentHandler" name="defaultNavigationBarComponentHandler" />
	<bean id="defaultNavigationBarComponentHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.NavigationBarComponentHandler"
		parent="defaultItemHandler" / -->
	
	<alias alias="categoryHandler" name="defaultCategoryHandler" />
	<bean id="defaultCategoryHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.CategoryHandler"
		parent="defaultItemHandler" />
	
	<alias alias="productHandler" name="defaultProductHandler" />
	<bean id="defaultProductHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.ProductHandler"
		parent="defaultItemHandler" />
	
	<alias alias="itemModelHandler" name="defaultItemModelHandler" />
	<bean id="defaultItemModelHandler" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.ItemModelHandler"
		parent="defaultItemHandler" />
	
	<bean id="defaultItemHandler" abstract="true" class="org.gs4tr.projectdirector.adaptors.hybris.service.handlers.ItemModelHandler" />
	
	<!--
		Localizability Voters
	-->
	<alias alias="localizabilityVoters" name="defaultLocalizabilityVoters" />
	<util:list id="defaultLocalizabilityVoters" value-type="org.gs4tr.projectdirector.adaptors.hybris.service.voting.LocalizabilityVoter">
		<ref bean="productLocalizabilityVoter" />
		<!-- ref bean="cmsItemLocalizabilityVoter" / -->
		<ref bean="configurableLocalizabilityVoter" />
		<ref bean="typeConfigurationVoter" />
	</util:list>
	
	<alias alias="productLocalizabilityVoter" name="defaultProductLocalizabilityVoter" />
	<bean id="defaultProductLocalizabilityVoter" class="org.gs4tr.projectdirector.adaptors.hybris.service.voting.ProductLocalizabilityVoter" />
	
	<!-- alias alias="cmsItemLocalizabilityVoter" name="defaultCmsItemLocalizabilityVoter" />
	<bean id="defaultCmsItemLocalizabilityVoter" class="org.gs4tr.projectdirector.adaptors.hybris.service.voting.CMSItemLocalizabilityVoter" / -->
	
	<alias alias="configurableLocalizabilityVoter" name="defaultConfigurableLocalizabilityVoter" />
	<bean id="defaultConfigurableLocalizabilityVoter" class="org.gs4tr.projectdirector.adaptors.hybris.service.voting.ConfigurableLocalizabilityVoter" />
	
	<alias alias="typeConfigurationVoter" name="defaultTypeConfigurationVoter" />
	<bean id="defaultTypeConfigurationVoter" class="org.gs4tr.projectdirector.adaptors.hybris.service.voting.TypeConfigurationVoter" />
	
	<!--
		XML Decorators
	-->
	
	<alias alias="xmlDecorators" name="defaultXmlDecorators" />
	<util:list id="defaultXmlDecorators" value-type="org.gs4tr.projectdirector.adaptors.hybris.service.xml.XMLDecorator">
		<ref bean="maximumContentLengthDecorator" />
		<ref bean="itemRelationshipDecorator" />
		<ref bean="productDecorator" />
		<ref bean="productFeatureDecorator" />
	</util:list>
	
	<alias alias="maximumContentLengthDecorator" name="defaultMaximumContentLengthDecorator" />
	<bean id="defaultMaximumContentLengthDecorator" class="org.gs4tr.projectdirector.adaptors.hybris.service.xml.decorator.MaximumContentLengthDecorator" />
	
	<alias alias="itemRelationshipDecorator" name="defaultItemRelationshipDecorator" />
	<bean id="defaultItemRelationshipDecorator" class="org.gs4tr.projectdirector.adaptors.hybris.service.xml.decorator.ItemRelationshipDecorator" />
	
	<alias alias="productDecorator" name="defaultProductDecorator" />
	<bean id="defaultProductDecorator" class="org.gs4tr.projectdirector.adaptors.hybris.service.xml.decorator.ProductDecorator" />
	
	<alias alias="productFeatureDecorator" name="defaultProductFeatureDecorator" />
	<bean id="defaultProductFeatureDecorator" class="org.gs4tr.projectdirector.adaptors.hybris.service.xml.decorator.ProductFeatureDecorator" />
	
	<!--
		Catalog Content Providers
	-->
	<!-- Example definition of a CatalogContentProvider referenced in a content monitor configuration file content element
	
	<alias alias="productCatalogContentProvider" name="defaultProductCatalogContentProvider" />
	<bean id="defaultProductCatalogContentProvider" class="org.gs4tr.projectdirector.adaptors.hybris.service.monitor.provider.SampleCatalogContentProvider" />
	
	-->
	
	<!--
		Other beans
	-->
	<bean id="transactionTemplate" class="org.springframework.transaction.support.TransactionTemplate">
		<property name="transactionManager" ref="txManager" />
	</bean>
	
	<bean id="cronJobExecuter" class="org.gs4tr.projectdirector.adaptors.hybris.util.CronJobExecuter" />
	
	<alias alias="documentNameGenerator" name="defaultDocumentNameGenerator" />
	<bean id="defaultDocumentNameGenerator" class="org.gs4tr.projectdirector.adaptors.hybris.service.impl.DefaultGlobalLinkDocumentNameGenerator" /> 
	
	<bean id="maximumColumnLengthProvider" class="org.gs4tr.projectdirector.adaptors.hybris.service.xml.decorator.MaximumContentLengthDecorator" />
	
</beans>
